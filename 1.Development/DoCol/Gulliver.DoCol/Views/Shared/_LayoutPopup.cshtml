<!DOCTYPE html>

<html>
<head>
	<title>@ViewBag.Title</title>

	<script>
		// Check load duplication jquery
		if (!window.jQuery) {
			// Load the script
			var script = document.createElement("SCRIPT");
			script.src = '@Scripts.Url( "~/bundles/jquery" )';
            script.type = 'text/javascript';
            document.getElementsByTagName("head")[0].appendChild(script);
		}
	</script>

	@RenderSection( "CssSection", required: false )
	@Scripts.Render( "~/bundles/TabIndexPopup" )

	<meta name="viewport" content="width=device-width" />
	<style type="text/css">
		.loading_popup
		{
			position: fixed;
			width: 100%;
			height: 100%;
			background: url('../../../Content/Images/loader.gif') no-repeat center center;
			opacity: 0.6;
			z-index: 9999;
			background-size: 10%;
		}
	</style>
</head>

<body>
	<div class="loading_popup"></div>
	<div class="layout_page_background column-no-gutter">
		@*<div class="col-xs-12 border_bottom" id="header1">
            <div class="col-xs-2 padding-top-10 margin-left-10">
                <img src="~/Images/logo.png" />
            </div>
        </div>*@
		<div class="col-xs-12 column-no-gutter title-page-section-popup bg_blue">
			@RenderSection( "TitleSection", required: false )
		</div>
		<div>
			<input tabindex="1" class="hiddenLeft">

			@RenderBody()

			<input tabindex="1000" onfocus="focusFirst()" class="hiddenLeft">
		</div>
	</div>
	@Scripts.Render( "~/bundles/jqueryCommon" )
</body>
</html>
